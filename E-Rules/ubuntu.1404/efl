PREFIX="$1";

./configure --prefix=$PREFIX --with-x  --with-opengl=full  --with-gnu-ld --with-dbus-services=/etc/dbus-1/system.d  --enable-xine  --enable-multisense  --enable-physics  --enable-gesture  --enable-egl  --enable-harfbuzz  --enable-drm --enable-fb --enable-sdl  --disable-systemd --enable-nls --disable-tslib --disable-gesture

make

make install

